{{/*
	Trigger: \A
	Trigger Type: Regex

	Usage:
	Limit this custom command to your counting channel and start counting :)
	
	Copyright (c): Joe_#2997 (creator) & Black Wolf#0001 (modified) 2021
	License: MIT
	Repository: https://github.com/BlackWolfWoof/yagpdb-cc/
*/}}

{{$countingrole := 880794080550989854}}
{{/*Set the countingrole to 0 or false if you don't want to give a role to the last user that counted*/}}
{{$antiad := false}}
{{/*This prevents users with discord servers in their status to get hoised*/}}
{{$sameuser := false}}
{{/*If set to false the same user cannot count multiple times in a row*/}}
{{$countingtracker := true}}
{{/*If set to true it will keep track of who counted how often*/}}
{{/*Make sure to also add the 'Pagination', 'Leaderboard' and 'Counter' code when setting this to true*/}}




{{$dbcount := dbCount}}{{$_ := 50}}{{if .IsPremium}}{{$_ = 500}}{{end}}
{{/*Channel Topic*/}}
{{define "topic"}}
	{{$unix := currentTime.Unix}}
	 {{with (reFindAllSubmatches `Dal≈°√≠ mo≈æn√° √∫prava: <t:(\d+):[RT]>` .Channel.Topic)}}
		{{$unix = index . 0 1}}
	{{end}}
	{{if ge currentTime.Unix (toInt $unix)}}
		{{$topic := ""}}
		{{if .ct}}
			{{if .IsPremium}}
				{{$topic = print $topic "\nUsers that counted: " (dbCount "counting_tracker")}}
				{{range dbTopEntries "counting_tracker" 1 0}}{{$topic = print $topic "\nTop user: <@" .UserID "> - " .Value "x"}}{{end}}
			{{end}}
			{{$topic = print $topic "\nPlnost datab√°ze: " (fdiv (mult (mult .Guild.MemberCount .us|fdiv .dbc) 10000|roundCeil) 100) "%"}}
		{{end}}
		{{editChannelTopic nil (print "üóíÔ∏è YAGPDB poƒç√≠tac√≠ kan√°l\n\n**Statistiky:**\nSouƒçasn√© ƒç√≠slo: " .current $topic "\n\n*T√©ma kan√°lu se m≈Ø≈æe aktualizovat  ka≈æd√Ωch 5 minut kdy≈æ nƒõkdo poƒç√≠t√°*\nDal≈°√≠ mo≈æn√° √∫prava: <t:" (toDuration "5m10s"|currentTime.Add).Unix ":T>\n\nIf you are interested in adding this code to your own server visit https://github.com/BlackWolfWoof/yagpdb-cc/tree/master/Counting")}}
	{{else}}
		{{scheduleUniqueCC .CCID nil (sub $unix currentTime.Unix) "counting_cc" "channelname"}}
	{{end}}
{{end}}

{{$current := add 1 (toInt (dbGet 2000 "counting_counter").Value)}}
{{if not .ExecData}}
	{{$lastCounter := ""}}{{with dbGet 2000 "lastCounter"}}{{$lastCounter = .Value}}{{end}}
	{{if or (reFind `^\d+$` .Message.Content|not) (ne (str $current) .Message.Content)}}
		{{/*Wrong number*/}}
		{{$x := sendMessageRetID nil (print .User.Mention ", Nespr√°vn√© ƒç√≠slo, dal≈°√≠ je " $current)}}
		{{deleteMessage nil $x 5}}
		{{deleteTrigger 1}}
	{{else if and (eq (str .User.ID) $lastCounter) (not $sameuser)}}
		{{/*$sameuser part*/}}
		{{$x := sendMessageRetID nil (print .User.Mention "Poƒç√≠t√°me spolu, ne samostatnƒõ")}}
		{{deleteMessage nil $x 5}}
		{{deleteTrigger 1}}
	{{else}}
		{{/*Current counting number +1*/}}
		{{$n√°sobek := toInt (mod $current 100)}}
		{{if eq $n√°sobek 0}}
			M√°me {{$current}} ! üéâ
		{{end}}
		{{$current = dbIncr 2000 "counting_counter" 1|toInt}}

		{{/*If antiad on block counting role*/}}
		{{$blockrole := false}}
		{{if and $antiad (reFind `(?i)(discord(?:app)?\.gg(?:/|\\+/+)|discord(?:app)?\.com(?:/|\\+/+)(?:invite/))([A-z0-9-]{2,})` (index (exec "whois" .User.ID).Fields 6).Value)}}
			{{$blockrole = true}}
		{{end}}

		{{/*Countingrole part*/}}
		{{if and $countingrole (dbGet .User.ID "countingroleblock"|not)}}
			{{if not $blockrole}}
				{{addRoleID $countingrole}}
				{{if ne ($cr := toInt (dbGet 2000 "countingrole").Value) .User.ID}}
					{{takeRoleID $cr $countingrole}}
				{{end}}
				{{dbSet 2000 "countingrole" (str .User.ID)}}
			{{end}}
		{{end}}
		{{dbSet 2000 "lastCounter" (str .User.ID)}}

		{{/*Counting tracker part*/}}
		{{if $countingtracker}}
			{{$num := 0}}{{with (dbGet .User.ID "counting_tracker")}}{{$num = toInt .Value|add 1}}{{end}}
			{{dbSet .User.ID "counting_tracker" (str $num)}}
			{{/*Database Anti overflow*/}}
			{{if ge (fdiv (mult (mult $.Guild.MemberCount $_|fdiv $dbcount) 10000|roundCeil) 100|toInt) 95}}
				{{execCC .CCID nil 0 "overflow"}}
			{{end}}
		{{end}}

		{{/*Channel Topic*/}}
		{{template "topic" (sdict "Channel" .Channel "IsPremium" .IsPremium "Guild" .Guild "CCID" .CCID "ct" $countingtracker "us" $_ "dbc" $dbcount "current" $current "ExecData" .ExecData)}}
	{{end}}
{{else if eq .ExecData "channelname"}}
	{{/*Channel topic*/}}
	{{template "topic" (sdict "Channel" .Channel "IsPremium" .IsPremium "Guild" .Guild "CCID" .CCID "ct" $countingtracker "us" $_ "dbc" $dbcount "current" (sub $current 1) "ExecData" .ExecData)}}
{{else}}
	{{/*Database Anti overflow*/}}
	{{if not (dbGet 2000 "counting_warning")}}
		{{dbSetExpire 2000 "counting_warning" true 604800}}
		{{sendMessage nil (complexMessage "content" (print "<@" $.Guild.OwnerID ">, a custom command requires your attention!") "embed" (cembed "title" "‚ÄºÔ∏èThe YAGPDB database is almost full‚ÄºÔ∏è" "thumbnail" (sdict "url" "https://cdn.discordapp.com/emojis/565142262401728512.png") "description" (print "**The YAGPDB database is to " (fdiv (mult (mult .Guild.MemberCount $_|fdiv $dbcount) 10000|roundCeil) 100) "% full!\nTo ensure the functionality of thise code I will delete the counting trackers of the people who counted the least amount of times from now on.**\nTo stop that, please make sure the database isn't that full.\nIf you are unsure how to do that please join the [official support server](https://discord.gg/4udtcA5) and message `Black Wolf#0001` for help.") "color" 0xB62138))}}
	{{else}}
		{{range (dbBottomEntries "counting_tracker" 1 0)}}
			{{dbDel .UserID .Key}}
		{{end}}
	{{end}}
{{end}}
